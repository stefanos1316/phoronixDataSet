#!/bin/sh

np=1

lamhalt
lamboot mflam4
while [ $np -le 4 ]
do
	mpirun -np $np ./nero2d $1
	cp benchmark.dat $2"$np".dat
	np=`expr $np + 1`
done

lamhalt
lamboot mflam8
